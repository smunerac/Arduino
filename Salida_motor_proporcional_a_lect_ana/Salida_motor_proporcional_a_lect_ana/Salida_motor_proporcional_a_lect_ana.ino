/**/const int pin_pot=0;            //Pin de conexion del potenciometroconst int pin_motor=5;int valor_leido;int valor_salida;void setup() {pinMode(pin_motor,OUTPUT);   //declarar el pin como salida}void loop() {valor_leido = analogRead(pin_pot);valor_salida = map(valor_leido, 0, 1024, 0,256); //(variable a mapear, valores entrada, valores salida) digitalWrite(pin_motor, valor_salida);  }