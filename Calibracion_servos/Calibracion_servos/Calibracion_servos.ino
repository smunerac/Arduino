/**/#include <Servo.h>              //Desabilita el PWM de los pines 9 y 10 en arduino UNOServo servo1;                   // crea los objetos para controlar los servomotoresServo servo2;                   // crea los objetos para controlar los servomotoresconst int pin_servo1=2;         //Pin de conexion de servo 1const int pin_servo2=3;         //Pin de conexion de servo 2const int pin_pot=3;            //Pin de conexion del potenciometroconst int valor_min_servo1=800;       //(500-2400>>datasheet)      (800-2000>>garra)const int valor_max_servo1=2000;const int valor_min_servo2=900;const int valor_max_servo2=2000;int valor_leido;int giro1;int giro2;const int pulsador=9;const int tiempoAntirrebote = 10; // tiempo en ms para evitar el reboteint cuenta = 0;int estadoBoton;int estadoBotonAnterior;void setup() {Serial.begin(9600); servo1.attach(pin_servo1, valor_min_servo1, valor_max_servo1); servo2.attach(pin_servo2, valor_min_servo2, valor_max_servo2);  pinMode(pulsador,INPUT);   //declarar el pin como entrada}void loop() {valor_leido = analogRead(pin_pot);giro1 = map(valor_leido, 0, 1023, 176, 3); //(variable a mapear, valores entrada, valores salida) servo1.write(giro1);                       //llevar el servo a la posicion giro2 = map(valor_leido, 0, 1023, 176, 3); //(variable a mapear, valores entrada, valores salida) servo2.write(giro2);  //llevar el servo a la posicionSerial.println(giro1); delay(30);                                    //esperar que el servo llegue a la posicion    }